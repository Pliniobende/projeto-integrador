<body>
    <div class="body">
        <div class="BigLogo">
            <img src="/images/Logo.png" alt="Logo" height="120px" width="120px">
        </div>
        <div class="title">
            <h2>Recupere sua Senha</h2>
        </div>
        <div class="Datas">
            <form method="POST" action="/api/user/recuperacao-senha">
                <div>
                    <div class="centro">
                        <label class="label1" for="email"><b>E-mail:</b>*</label>
                        <br>
                        <input class="input1" type="email" name="email" id="email" placeholder="(Digite seu E-mail)" required>
                    </div>
                    
                    <!-- retirei a senha -->
                    
                    <div class="centro">
                        <button class="btform" type="submit">Enviar</button>
                        
                    </div>
    
                    <!-- link para recuperar a senha -->
                    <div> 
                        
                        <label class="label1">Uma nova senha será enviada para o seu e-mail</label>
                        
                    </div>
                
            </form>
        </div>
